# Production Environment Configuration for Apulink Backend
# Copy this file to .env and update with real values

# Supabase Configuration
SUPABASE_URL=https://nlummhoosphnqtfafssf.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key_here

# Server Configuration
PORT=3001
NODE_ENV=production

# JWT Configuration (CRITICAL: Generate new secret for production)
JWT_SECRET=your_strong_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Database Configuration
DATABASE_URL=postgresql://postgres:your_db_password@db.nlummhoosphnqtfafssf.supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:your_db_password@db.nlummhoosphnqtfafssf.supabase.co:5432/postgres

# Frontend Configuration
FRONTEND_URL=https://your-frontend-domain.com
NETLIFY_URL=https://your-netlify-app.netlify.app

# Optional: Third-party services
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com
STRIPE_SECRET_KEY=sk_live_your_stripe_secret
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public

# Security: CORS Origins (comma-separated)
